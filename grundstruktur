<body>
  <h1>ðŸ“‘ Projektvertrag Generator</h1>
  <p>FÃ¼gt hier euren <b>exportierten Text</b> aus dem H5P-Dokumentationswerkzeug ein:</p>

  <textarea id="inputText" placeholder="Hier Text einfÃ¼gen..."></textarea>
  <br>
  <button id="generatePdfBtn">ðŸ“„ PDF erzeugen</button>

  <script>
    document.getElementById("generatePdfBtn").addEventListener("click", function () {
      const input = document.getElementById("inputText").value;

      if (!input.trim()) {
        alert("Bitte zuerst den Text einfÃ¼gen!");
        return;
      }

      // Text verarbeiten
      const lines = input.split("\n").filter(line => line.trim() !== "");

      // Gruppennamen auslesen (erste Zeile oder 'Name der Projekt Gruppe')
      let groupName = "Gruppe";
      const groupLine = lines.find(l => l.toLowerCase().includes("projekt gruppe"));
      if (groupLine) {
        groupName = groupLine.split(":").pop().trim().replace(/\s+/g, "_");
      }

      // PDF generieren
      const { jsPDF } = window.jspdf;
      const pdf = new jsPDF();
      pdf.setFontSize(16);
      pdf.text("Projektvertrag", 20, 20);

      pdf.setFontSize(12);
      let y = 40;
      lines.forEach(line => {
        pdf.text(line, 20, y);
        y += 10;
      });

      // Datei speichern
      pdf.save(`Projektvertrag_${groupName}.pdf`);
    });
  </script>
